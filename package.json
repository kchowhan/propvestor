{
  "name": "propvestor",
  "private": true,
  "workspaces": ["apps/*"],
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "npm --workspace apps/api run dev & npm --workspace apps/web run dev",
    "dev:all": "npm --workspace apps/api run dev & npm --workspace apps/web run dev & npm --workspace apps/marketing run dev",
    "dev:marketing": "npm --workspace apps/marketing run dev",
    "lint": "npm --workspace apps/api run lint && npm --workspace apps/web run lint",
    "format": "prettier . --write",
    "prisma:generate": "npm --workspace apps/api run prisma:generate",
    "prisma:migrate": "npm --workspace apps/api run prisma:migrate",
    "prisma:studio": "npm --workspace apps/api run prisma:studio",
    "seed": "npm --workspace apps/api run seed",
    "seed:demo": "npm --workspace apps/api run seed:demo",
    "cleanup": "npm --workspace apps/api run cleanup"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "glob": "^10.4.6",
    "test-exclude": "^7.0.1"
  }
}
