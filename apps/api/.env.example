# Server Configuration
PORT=4000
DATABASE_URL=postgresql://user:password@localhost:5432/propvestor
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REDIS_URL=redis://localhost:6379

# CORS Configuration
# For production, set to your frontend URL(s)
# Multiple origins can be comma-separated: https://app.example.com,https://www.example.com
# Use '*' to allow all origins (NOT recommended for production)
CORS_ORIGIN=http://localhost:5173

# Email Configuration (Optional - defaults to console logging in dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
SMTP_FROM=noreply@propvestor.com
APP_URL=http://localhost:4000

# Google Cloud Storage (Optional)
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=propvestor-documents
GCS_KEY_FILENAME=./path/to/service-account-key.json
# OR use GCS_CREDENTIALS as JSON string (alternative to key file)
# GCS_CREDENTIALS={"type":"service_account","project_id":"..."}

# DocuSign Configuration (Optional)
DOCUSIGN_INTEGRATOR_KEY=your-integrator-key
DOCUSIGN_USER_ID=your-user-id
DOCUSIGN_PRIVATE_KEY=base64-encoded-private-key
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi
DOCUSIGN_AUTH_SERVER=account.docusign.com

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Cloud Scheduler (Optional)
GCS_SCHEDULER_LOCATION=us-central1
GCS_SCHEDULER_SERVICE_ACCOUNT=your-service-account@project.iam.gserviceaccount.com
SCHEDULER_SECRET=your-scheduler-secret-token

# RentSpree Configuration (Optional)
RENTSPREE_API_KEY=your-rentspree-api-key
RENTSPREE_WEBHOOK_SECRET=your-rentspree-webhook-secret
RENTSPREE_BASE_URL=https://api.rentspree.com/v1
